<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE bindings [
      <!ENTITY % leaf-attributes-bindingDTD SYSTEM "chrome://dcpoffline/locale/leaf-attributes-binding.dtd" >
      <!ENTITY separator "&#160;:&#160;" >
      %leaf-attributes-bindingDTD;
]>

<bindings id="leaf-attributes-binding"
    xmlns="http://www.mozilla.org/xbl"
    xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
    xmlns:xbl="http://www.mozilla.org/xbl">
    
    <binding id="leaf-attr" extends="chrome://dcpoffline/content/bindings/base-attributes.xml#base-attr">
        <implementation>
            <method name="setValue">
                <parameter name="value"/>
                <body><![CDATA[
                    docManager.getInstance(this.docid)
                              .setValue(this.attrid, value);
                ]]></body>
            </method>
            <method name="getValue">
                <parameter name="defaultValue"/>
                <body><![CDATA[
                    Components.utils.import("resource://modules/docManager.jsm", dcpOffline);
                    return docManager.getDocInstance({docid: this.docid})
                                     .getValue({attrid : this.attrid});
                ]]></body>
            </method>
            <method name="getDisplayValue">
                <body><![CDATA[
                    Components.utils.import("resource://modules/docManager.jsm", dcpOffline);
                    return docManager.getDocInstance({docid: this.docid})
                                             .getDisplayValue({attrid: this.attrid});
                ]]></body>
            </method>
            <constructor><![CDATA[
                this.getChild('rawValue').setAttribute('value', this.getValue());
                this.getChild('displayValue').setAttribute('value', this.getDisplayValue());
            ]]></constructor>
        </implementation>
    </binding>
    
    <!-- Text attributes -->
    
    <binding id="text" extends="chrome://dcpoffline/content/bindings/leaf-attributes.xml#leaf-attr">
        <content>
            <xul:hbox xbl:inherits="attrid" flex="1" class="dcpAttribute text">
                <xul:label anonid="label" class="dcplabel" value="debug"/>
                <xul:label anonid="separator" class="dcpSeparator" value="&separator;"/>
                <xul:label anonid="displayValue" class="dcpValue" value=""/>
                <xul:label anonid="rawValue" value="" collapsed="true"/>
            </xul:hbox>
        </content>
    </binding>
    
    <binding id="text-edit" extends="chrome://dcpoffline/content/bindings/leaf-attributes.xml#text">
        <content>
            <xul:hbox xbl:inherits="attrid" flex="1" class="dcpAttribute text">
                <xul:label anonid="label" class="dcplabel" value=""/>
                <xul:label anonid="separator" class="dcpSeparator" value="&separator;"/>
                <xul:label anonid="displayValue" class="dcpValue" value=""/>
                <xul:label anonid="rawValue" value="" collapsed="true"/>
            </xul:hbox>
        </content>
    </binding>
    
    <!-- Numeric attributes -->
    
    <binding id="numeric" extends="chrome://dcpoffline/content/bindings/leaf-attributes.xml#leaf-attr">
        <content>
            <xul:hbox xbl:inherits="attrid" flex="1" class="dcpAttribute text">
                <xul:label anonid="label" class="dcplabel" value=""/>
                <xul:label anonid="separator" class="dcpSeparator" value="&separator;"/>
                <xul:label anonid="displayValue" class="dcpValue" value=""/>
                <xul:label anonid="rawValue" value="" collapsed="true"/>
            </xul:hbox>
        </content>
    </binding>
    
    <binding id="int-edit" extends="chrome://dcpoffline/content/bindings/leaf-attributes.xml#numeric">
        <content>
            <xul:hbox xbl:inherits="attrid" flex="1" class="dcpAttribute text">
                <xul:label anonid="label" class="dcplabel" value=""/>
                <xul:label anonid="separator" class="dcpSeparator" value="&separator;"/>
                <xul:textbox anonid="displayValue" class="dcpValue" value=""
                             type="number" hidespinbutton="true" inherited="min,max"/>
                <xul:textbox anonid="rawValue" value="" collapsed="true"/>
            </xul:hbox>
        </content>
    </binding>
    
    <binding id="double-edit" extends="chrome://dcpoffline/content/bindings/leaf-attributes.xml#numeric">
        <content>
            <xul:hbox xbl:inherits="attrid" flex="1" class="dcpAttribute text">
                <xul:label anonid="label" class="dcplabel" value=""/>
                <xul:label anonid="separator" class="dcpSeparator" value="&separator;"/>
                <xul:textbox anonid="displayValue" class="dcpValue" value=""
                    type="number" hidespinbutton="true" decimalplaces="Infinity"
                    inherited="min,max"/>
                <xul:textbox anonid="rawValue" value="" collapsed="true"/>
            </xul:hbox>
        </content>
    </binding>
    
    <binding id="money-edit" extends="chrome://dcpoffline/content/bindings/leaf-attributes.xml#numeric">
        <content>
            <xul:hbox xbl:inherits="attrid" flex="1" class="dcpAttribute text">
                <xul:label anonid="label" class="dcplabel" value=""/>
                <xul:label anonid="separator" class="dcpSeparator" value="&separator;"/>
                <xul:textbox anonid="displayValue" class="dcpValue" value=""
                    type="number" hidespinbutton="true" decimalplaces="2"
                    inherited="min,max"/>
                <xul:textbox anonid="rawValue" value="" collapsed="true"/>
            </xul:hbox>
        </content>
    </binding>
    
</bindings>