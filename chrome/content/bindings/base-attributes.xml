<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE bindings [
      <!ENTITY % base-attributes-bindingDTD SYSTEM "chrome://dcpoffline/locale/base-attributes-binding.dtd" >
      <!ENTITY separator "&#160;:&#160;" >
      %base-attributes-bindingDTD;
]>

<bindings id="base-attributes-binding"
    xmlns="http://www.mozilla.org/xbl"
    xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
    xmlns:xbl="http://www.mozilla.org/xbl">
    
    <!--
        Anonymous implementation of base attributes.
        -->
        
    <binding id="base-attr">
        <implementation>
            <property
                name="type"
                readonly="true"
                onget="return this.getAttribute('type');"/>
            <property
                name="attrid"
                readonly="true"
                onget="return this.getAttribute('attrid');"/>
            <property
                name="localDocument"
                readonly="true"
                onget="return this.doc;"/>
            <property
                name="label"
                readonly="true"
                onget="return this.doc.getLabel(this.attrid);"/>
            <method name="getDocument">
                <body><![CDATA[
                    Components.utils.import("resource://modules/domUtils.jsm");
                    return domUtils.getParentByTagName(this, 'dcpDocument');
                ]]></body>
            </method>
            <method name="getChild">
                <parameter name="aChildName"/>
                <body><![CDATA[
                      return document.getAnonymousElementByAttribute(this, "anonid", aChildName);
                ]]></body>
            </method>
            <constructor><![CDATA[
                Components.utils.import("resource://modules/logger.jsm");
                logConsole("<---- entering base-attribute constructor for "+this.attrid);
                this.doc = this.getDocument().localDocument;
                logConsole(this.doc.getProperty('initid')+':'+this.attrid);
                var labelValue = this.label;
                var labelElmt = this.getChild('label');
                labelElmt.setAttribute('label', label)
                labelElmt.value = label;
                logConsole("leaving base-attribute constructor for "+this.attrid+" ---->");
            ]]></constructor>
            <destructor><![CDATA[
            ]]></destructor>
        </implementation>
    </binding>
    
</bindings>