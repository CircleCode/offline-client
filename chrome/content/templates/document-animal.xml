<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE bindings>
<bindings id="documentAnimalBindings"
    xmlns="http://www.mozilla.org/xbl"
    xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
    xmlns:xbl="http://www.mozilla.org/xbl">
    
    <binding id="document-animal">
        
        <content>
            <xul:vbox flex="1">
                <dcpDocument xbl:inherits="initid" style="border:3px solid blue;">
                    <dcpAttribute type="frame" attrid="an_identification">
                        <dcpAttribute type="text" attrid="an_nom"/>
                        <dcpAttribute type="int" attrid="an_tatouage"/>
                        <dcpAttribute type="date" attrid="an_naissance"/>
                    </dcpAttribute>
                </dcpDocument>
            </xul:vbox>
        </content>
        
    </binding>
</bindings>