<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE bindings>
<bindings id="document-ZOO_ANIMAL-Bindings"
    xmlns="http://www.mozilla.org/xbl"
    xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
    xmlns:xbl="http://www.mozilla.org/xbl">
    
    <binding id="document-ZOO_ANIMAL-view">
        
        <content>
            <xul:vbox flex="1" xbl:inherits="flex">
                <dcpDocument xbl:inherits="initid" mode="view" flex="1">
                    <dcpDocMenu>
                        <xul:toolbarbutton label="custom button for animal"/>
                    </dcpDocMenu>
                    <dcpAttribute type="frame" attrid="an_identification">
                        <dcpAttribute type="text" attrid="an_nom"/>
                        <dcpAttribute type="int" attrid="an_tatouage"/>
                        <dcpAttribute type="relation" attrid="an_espece" relationFamily="ZOO_ESPECE"/>
                        <dcpAttribute type="text" attrid="an_ordre"/>
                        <dcpAttribute type="relation" attrid="an_classe" relationFamily="ZOO_CLASSE"/>
                        <dcpAttribute type="enum" attrid="an_sexe" multiple="false"/>
                        <dcpAttribute type="image" attrid="an_photo" width="200px"/>
                        <dcpAttribute type="date" attrid="an_naissance"/>
                        <dcpAttribute type="date" attrid="an_entree"/>
                        <dcpAttribute type="array" attrid="an_enfant_t">
                            <dcpAttribute type="relation" attrid="an_enfant" relationFamily="ZOO_ANIMAL"/>
                        </dcpAttribute>
                        <dcpAttribute type="relation" attrid="an_pere" relationFamily="ZOO_ANIMAL"/>
                        <dcpAttribute type="relation" attrid="an_mere" relationFamily="ZOO_ANIMAL"/>
                    </dcpAttribute>
                </dcpDocument>
            </xul:vbox>
        </content>
        
    </binding>
    
    <binding id="document-ZOO_ANIMAL-edit">
        
        <content>
            <xul:vbox flex="1">
                <dcpDocument xbl:inherits="initid" mode="edit">
                    <dcpAttribute type="frame" attrid="an_identification">
                        <dcpAttribute type="text" attrid="an_nom" visibility="W" needed="true"/>
                        <dcpAttribute type="int" attrid="an_tatouage" visibility="W"/>
                        <dcpAttribute type="relation" attrid="an_espece" relationFamily="ZOO_ESPECE" visibility="W" needed="true"/>
                        <dcpAttribute type="text" attrid="an_espece_title" visibility="H"/>
                        <dcpAttribute type="text" attrid="an_ordre" visibility="R"/>
                        <dcpAttribute type="relation" attrid="an_classe" relationFamily="ZOO_CLASSE" visibility="R"/>
                        <dcpAttribute type="enum" attrid="an_sexe" multiple="false" visibility="W"/>
                        <dcpAttribute type="image" attrid="an_photo" width="200px" visibility="W"/>
                        <dcpAttribute type="date" attrid="an_naissance" visibility="W"/>
                        <dcpAttribute type="date" attrid="an_entree" visibility="W"/>
                        <dcpAttribute type="array" attrid="an_enfant_t" visibility="W">
                            <dcpAttribute type="relation" attrid="an_enfant" relationFamily="ZOO_ANIMAL" visibility="W"/>
                        </dcpAttribute>
                        <dcpAttribute type="relation" attrid="an_pere" relationFamily="ZOO_ANIMAL" visibility="R"/>
                        <dcpAttribute type="relation" attrid="an_mere" relationFamily="ZOO_ANIMAL" visibility="R"/>
                    </dcpAttribute>
                </dcpDocument>
            </xul:vbox>
        </content>
        
    </binding>
    
</bindings>