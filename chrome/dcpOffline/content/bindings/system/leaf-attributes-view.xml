        <content>
            <xul:hbox xbl:inherits="attrid" flex="1" class="dcpAttribute docid">
                <xul:label anonid="label" class="dcpLabel" xbl:inherits="value=label" />
                <xul:label anonid="separator" class="dcpSeparator" value="&separator;" />
